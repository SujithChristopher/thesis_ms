   issue = {7},
   journal = {Electronics 2021, Vol. 10, Page 840},
   keywords = {omnidirectional Mecanum,recursive least square (RLS),slip ratio,wheeled automated guided vehicle (OMWAGV)},
   month = {4},
   pages = {840},
   publisher = {Multidisciplinary Digital Publishing Institute},
   title = {Slip Estimation and Compensation Control of Omnidirectional Wheeled Automated Guided Vehicle},
   volume = {10},
   url = {https://www.mdpi.com/2079-9292/10/7/840/htm https://www.mdpi.com/2079-9292/10/7/840},
