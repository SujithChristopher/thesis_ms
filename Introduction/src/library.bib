   journal = {Acta Oncologica},
   month = {1},
   pages = {915-922},
   publisher = {Taylor & Francis},
   title = {Respiration correlated cone-beam computed tomography and 4DCT for evaluating target motion in Stereotactic Lung Radiation Therapy},
