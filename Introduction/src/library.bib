   issue = {7},
   journal = {Annals of Nuclear Medicine},
   keywords = {4DCT,Attenuation correction,Gated,PET/CT,Respiration motion},
   month = {8},
   pages = {507-514},
   publisher = {Springer},
   title = {Importance of gated CT acquisition for the quantitative improvement of the gated PET/CT in moving phantom},
