   publisher = {BioMed Central},
   title = {A dosimetric analysis of respiration-gated radiotherapy in patients with stage III lung cancer},
   volume = {1},
   url = {https://link.springer.com/articles/10.1186/1748-717X-1-8 https://link.springer.com/article/10.1186/1748-717X-1-8},
