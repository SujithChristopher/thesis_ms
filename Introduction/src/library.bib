   issue = {2},
   journal = {Medical Physics},
   keywords = {4D-CT,Gating and gated imaging,Motion artifacts,Motion characterization},
   month = {2},
   pages = {333-340},
   pmid = {15000619},
   publisher = {John Wiley and Sons Ltd},
   title = {4D-CT imaging of a volume influenced by respiratory motion on multi-slice CT},
   volume = {31},
   url = {https://aapm.onlinelibrary.wiley.com/doi/full/10.1118/1.1639993 https://aapm.onlinelibrary.wiley.com/doi/abs/10.1118/1.1639993 https://aapm.onlinelibrary.wiley.com/doi/10.1118/1.1639993},
